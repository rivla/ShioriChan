<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/schedule">

    <!--
    観光地の情報を紹介するページのレイアウト

    構成要素としては、
    ・観光地の画像
    ・観光地の名称
    ・観光地の説明・紹介文
    ・レビュー

    を考えている。
    URLでHPを載せてみる？？

    しおりちゃんがレビューの例を吹き出してしゃべっているレイアウトも考えたが
    スペース的に厳しかったので、実装していません
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 観光地の画像、「評価」、レーティングの表示場所のレイアウト -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="評価"
                        android:textSize="40dp" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5" />

                </LinearLayout>

            </LinearLayout>

            <!-- 観光地の名称 -->
            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="＜観光地の名称＞"
                android:textSize="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- 観光地の情報 WebViewからの情報を反映？ -->
            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="＜観光地の説明・情報を入れる＞長くなるとこんな感じに折り返します"
                android:textSize="30dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>